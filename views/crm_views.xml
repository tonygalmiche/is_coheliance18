    <record id="is_crm_lead_view_form" model="ir.ui.view" >
        <field name="name">is_crm_lead_view_form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet[1]" position="inside">
                <style>
                    .o_form_label{
                        white-space: nowrap;
                    }
                </style>
            </xpath>
            <field name="team_id" position="after">
                <field name="affaire_id"/>
            </field>
            <!-- <group name="opportunity_info" position="before">
                <group>
                    <field name="amene_par_id"/>
                    <field name="realisee_id"/>
                    <field name="produit_cree_par_id"/>
                    <field name="encadrement_par_id"/>
                </group>
            </group> -->
        </field>
    </record>
    <record id="is_crm_case_tree_view_oppor" model="ir.ui.view" >
        <field name="name">is_crm_case_tree_view_oppor</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="affaire_id" optional="show"/>
                <field name="amene_par_id"        optional="show"/>
                <field name="realisee_id"         optional="show"/>
                <field name="produit_cree_par_id" optional="show"/>
                <field name="encadrement_par_id"  optional="show"/>
            </field>
        </field>
    </record>
    <record id="is_view_crm_case_opportunities_filter" model="ir.ui.view" >
        <field name="name">is_view_crm_case_opportunities_filter</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="affaire_id"/>
                <field name="amene_par_id"/>
                <field name="realisee_id"/>
                <field name="produit_cree_par_id"/>
                <field name="encadrement_par_id"/>
            </field>
        </field>
    </record>




    <!-- mail.activity -->
    <record id="is_mail_activity_view_form_popup" model="ir.ui.view" >
        <field name="name">is_mail_activity_view_form_popup</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <field name="user_id" position="after">
                <field name="res_model_id" string="Modèle"/>
                <field name="res_id" string="Document"/>
                <field name="active"/>
            </field>
        </field>
    </record>

    <record id="is_mail_activiy_list" model="ir.ui.view">
        <field name="name">is_mail_activiy_list</field>
        <field name="model">mail.activity</field>
        <field name="arch" type="xml">
            <list default_order="date_deadline desc">
                <field name="date_deadline"                    class="full-date"/>
                <field name="activity_type_id" optional="show"/>
                <field name="user_id"          optional="show" widget="many2one_avatar_user"/>
                <field name="is_partner_id"    optional="show" widget="many2one_clickable"/>
                <field name="summary"          optional="show"/>
                <field name="note"             optional="show"/>
                <field name="date_done"        optional="show" class="full-date"/>
                <field name="res_model_id"     optional="show" string="Modèle" />
                <field name="res_id"           optional="show" string="Document"/>
                <field name="active"           optional="hide" />
            </list>
        </field>
    </record>

    <record id="is_mail_activity_view_search" model="ir.ui.view" >
        <field name="name">is_mail_activity_view_search</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_search"/>
        <field name="arch" type="xml">
            <field name="summary" position="after">
                <field name="note"/>
                <field name="is_partner_id"/>
            </field>
        </field>
    </record>




    <record id="is_mail_activiy_action" model="ir.actions.act_window">
        <field name="name">Activités</field>
        <field name="res_model">mail.activity</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="is_mail_activiy_list"/>
        <field name="domain">[('active','in',[True,False])]</field>
    </record>


</odoo>
