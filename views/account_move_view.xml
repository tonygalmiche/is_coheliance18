        <record id="is_account_move_line_tree" model="ir.ui.view">
            <field name="name">is_account_move_line_tree</field>
            <field name="model">account.move.line</field>
            <field name="priority" eval="99" />
            <field name="arch" type="xml">
                <list editable="bottom" default_order="sequence, date desc, move_name desc, id">
                    <field name="sequence"  invisible="1"/>
                    <field name="move_name" invisible="1"/>
                    <field name="move_id"   invisible="1"/>
                    <field name="product_id"     readonly="1"/>
                    <field name="name"           readonly="1"/>
                    <field name="account_id"     readonly="1"/>
                    <field name="is_affaire_id"/>
                    <field name="quantity"       readonly="1"/>
                    <field name="price_unit"     readonly="1"/>
                    <field name="tax_ids"        readonly="1" widget="many2many_tags"/>
                    <field name="price_subtotal" readonly="1" string="Subtotal"/>
                    <field name="price_total"    readonly="1" string="Total"/>
                </list>
            </field>
        </record>
        <record  id="is_account_move_line_action" model="ir.actions.act_window">
            <field name="name">Lignes</field>
            <field name="res_model">account.move.line</field>
            <field name="limit">1000</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="is_account_move_line_tree"/>
            <field name="domain">[('move_id','=',active_id),('exclude_from_invoice_tab','=',False)]</field>
            <field name="context">{'move_id': active_id}</field>
        </record>
        <record id="is_view_account_move_line_filter" model="ir.ui.view">
            <field name="name">is_view_account_move_line_filter</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <field name="account_id" position="after">
                    <field name="is_responsable_id" />
                </field>
            </field>
        </record>


        <!-- account.move -->
        <record model="ir.ui.view" id="is_view_move_form">
            <field name="name">is_view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <button name="button_draft" position="after">
                    <button name="action_voir_lignes" type="object" string="Voir les lignes"/>
                </button>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="order_id" />
                </xpath>
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="is_affaire_id" />
                    <field name="is_msg_err" readonly="1"  invisible="is_msg_err==False" style="background:orange" />
                    <field name="is_nom_fournisseur"       invisible="move_type in ['out_invoice','out_refund']"/>
                    <field name="is_personne_concernee_id" invisible="move_type in ['out_invoice','out_refund']"/>
                    <field name="is_refacturable"          invisible="move_type in ['out_invoice','out_refund']"/> 
                    <field name="invoice_origin"           invisible="move_type in ['out_invoice','out_refund']"/>
                    <field name="supplier_invoice_number"  invisible="move_type in ['out_invoice','out_refund']"/>
                </xpath>
                <!-- <xpath expr="/form/sheet/notebook/page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="before">
                    <field name="is_affaire_id"/>
                </xpath> -->
             </field>
        </record>   
