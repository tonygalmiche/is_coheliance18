        <!-- CB à refacturer -->
        <record id="is_cb_a_refacturer_graph" model="ir.ui.view">
             <field name="name">is_cb_a_refacturer_graph</field>
             <field name="model">account.move</field>
             <field name="arch" type="xml">
                 <pivot string="pivot">
