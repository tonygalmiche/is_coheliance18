<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="is_view_order_form" model="ir.ui.view">
            <field name="name">is_view_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='validity_date']" position="before">
                    <field name="affaire_id"/>
                </xpath>
                <!-- Utilise section_and_note_one2many pour sÃ©parer les colonnes articles et description -->
                <!-- tout en gardant le bon affichage des sections et notes -->                
                 <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="widget">section_and_note_one2many</attribute>
                </xpath>
             </field>
        </record>
    </data>
</odoo>
